#include <iostream>
using namespace std;
int main()
{
	setlocale(0, "");
	int choice;
	cout << "Добро пожаловать в программу калькулятор" << endl;
	cout << "[1] - Русские слова " << endl;
	cout << "[2] - Английские слова" << endl;
	cout << "Выберите словарь: ";
	cin >> choice;
	switch (choice) {
	case 1: {
		cout << "Добро пожаловать в русский словарь" << endl;
		cout << "Список рксских слов для перевода" << endl;
		cout << "[1] Дом" << endl;
		cout << "[2] Дорога" << endl;
		cout << "[3] Книга" << endl;
		cout << "[4] Стол" << endl;
		cout << "[5] Стул" << endl;
		cout << "[6] Окно" << endl;

		break;
	}
	}
}
