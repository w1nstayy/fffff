#include <iostream>
#include <ctime>
using namespace std;

int main() {
	setlocale(0, "");
	int choice_1;
	int choice_2;
	int lenght_line_1;
	char texture_line_1;
	while (true) {
		cout << "[+] Программа - Геометрические фигуры " << endl;
		cout << "[1] Линия " << endl;
		cout << "Выберите фигуру: ";
		cin >> choice_1;
		cout << endl;
		if (choice_1 > 1 or choice_1 < 1) {
			cout << "Вы ввели неправильное значение " << endl << endl;
		}

		else {
			system("cls");
			switch (choice_1) {
			case 1: {
				while (true) {
					cout << "[+] Фигура: Линия " << endl << endl;
					cout << "[1] Горизонтальная" << endl;
					cout << "[2] Вертикальная" << endl << endl;
					cout << "[+] Выберите тип: ";
					cin >> choice_2;
					cout << endl;
					if (choice_2 < 1 or choice_2 > 2) {
						cout << "Вы ввели неправильное значение " << endl << endl;
					}

					else {
						switch (choice_2) {
						case 1: {
							while (true) {
								cout << "[+] Введите длинну линии: ";
								cin >> lenght_line_1;
								cout << endl;
								if (lenght_line_1 <= 0) {
									cout << "Вы ввели неправильное значение" << endl << endl;
								}
								else {
									cout << "[+] Введите текстуру линии: ";
									cin >> texture_line_1;
									while (lenght_line_1 > 0) {
										cout << texture_line_1 << " ";
										lenght_line_1--;
									}
									break;
									cout << endl;
								}
						case 2: {
							while (true) {
								cout << "[+] Введите длинну линии: ";
								cin >> lenght_line_1;
								cout << endl;
								if (lenght_line_1 <= 0) {
									cout << "Вы ввели неправильное значение" << endl << endl;
								}
								else {
									cout << "[+] Введите текстуру линии: ";
									cin >> texture_line_1;
									while (lenght_line_1 > 0) {
										cout << texture_line_1 << " ";
										cout << endl;
										lenght_line_1--;
									}
									break;
									cout << endl;
								}

							}
							

						}
							}
						}
						}
						cout << endl;
						system("pause");
						system("cls");
						break;
					}
				}
			}
			}
		}
		
	}
}
