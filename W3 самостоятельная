#include <iostream>
using namespace std;
int main() {
	setlocale(0, "");
	int number_1 = 0;
	int sum = 0;
	int count = 0;
	cout << "[ + ] Введите число: ";
	if (!(cin >> number_1))
		return 0;
	while (number_1 != 0) {
		cout << "[ + ] Введите число: ";
		count++;
		sum += number_1;
		cin >> number_1;
	}
	cout << "[ + ] Сумма: " << sum <<endl << "[ + ] Количество чисел: " << count;
	cout << endl;

}
