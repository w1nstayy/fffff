#include <iostream>
#include <string>
using namespace std;

int main() {
    setlocale(0, "");
    int figura;
    int choice;
    int razmer;
    char texture;
    while (true) {
        cout << "[+] Программа - “Геометрические фигуры” " << endl;;
        cout << "[ 1 ] Квадрат " << endl;;
        cout << "Выберите геометрическую фигуру: ";
        cin >> figura;
        cout << endl;
        if (figura == 1) {
            system("cls");
            while (true) {
                cout << "[ + ] Фигура: “Квадрат” " << endl;
                cout << "[ 1 ] Заполненный" << endl;
                cout << "[ 2 ] Пустой" << endl;
                cout << "[ + ] Выберите тип: ";
                cin >> choice;

                system("cls");
                if (choice == 1) {
                    while (true) {
                        cout << "[ + ] Фигура: “Квадрат” " << endl;
                        cout << "[ + ] Тип: Заполненный " << endl;
                        cout << "[ + ] Размер: ";
                        cin >> razmer;

                        if (razmer >= 1) {
                            cout << "[ + ] Текстура: ";
                            cin >> texture;
                            cout << endl;
                            for (int x = 0; x < razmer; x++) {
                                for (int y = 0; y < razmer; y++) {
                                    cout << " " << texture << " ";

                                }
                                cout << endl;
                            }

                            break;
                        }
                        else {
                            cout << "Вы ввели неправильное значение" << endl << endl;
                        }
                    }

                    break;
                }
                else if (choice == 2) {
                    cout << "[ + ] Фигура: “Квадрат” " << endl;
                    cout << "[ + ] Тип: Пустой " << endl;
                    cout << "[ + ] Размер:  ";
                    cin >> razmer;

                    if (razmer >= 1) {
                        cout << "[ + ] Текстура: ";
                        cin >> texture;
                        cout << endl;
                        for (int x = 0; x < razmer; x++) {
                            for (int y = 0; y < razmer; y++) {
                                if (y == 0 || x == 0 || x == razmer - 1 || y == razmer - 1) {
                                    cout << texture << " ";
                                }
                                else
                                { 
                                    cout << ". "; 
                                }
                            }
                                
                            cout << endl;
                              

                        }



                        break;
                    }
                    else {
                        cout << "Вы ввели неправильное значение" << endl << endl;
                    }

                }
                else {
                    cout << "Вы ввели неправильное значение" << endl << endl;
                }
            }

            break;
        }
        else {
            cout << "Вы ввели неправильное значение" << endl << endl;
        }

    }
    return 0;
}
