#include <iostream>
#include <ctime>
using namespace std;

int main() {

    srand(time(NULL));
    int answer;
    int attemps = 5;
    int menu_choice;
    int number;
    int random_number_2;
    int random_number_3;
    number = 0;
    setlocale(0, "");
    cout << "[Меню]" << endl;
    while (true) {
        cout << "(1) - Начать игру" << endl;
        cout << "(2) - Выход" << endl;
        cin >> menu_choice;
        if (menu_choice == 2) {
            cout << "Программа завершена" << endl;
            break;
        }
        else if (menu_choice == 1) {
            system("cls");
            cout << "Добро пожаловать в игру угадайка " << endl;
            int random_number_1 = rand() % 11;
            int random_number_2 = rand() % 11;
            int random_number_3 = rand() % 11;
            while (true) {
                if (number == 3) {
                    cout << "ПОЗДРАВЛЯЕМ ВЫ ВЫЙГРАЛИ!!!";
                    break;
                }
                if (attemps == 0) {
                    cout << "Попытки закончились :( ";
                    break;
                }
                
                cout << "[+] Угаданых чисел" << "[" << number << "/3]" << endl;
                cout << "[+] Попыток:" << attemps << endl << endl;
                cout << "[>] Угадать число: ";
                cin >> answer;
                attemps--;
                cout << endl;
                if (answer == random_number_1 || answer == random_number_2 || answer == random_number_3) {
                    cout << "Вы угадали число !!" << endl << endl;
                    number++;


                }
                else {
                    cout << "Вы не угадали число! Попробуйте ещё раз." << endl << endl;
                }
                
            }

        }
        break;
    }
    int _;
    cin >> _;
    return 0;

}
